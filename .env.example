# Copy this file to .env and adjust values

# Control API
API_PORT=15277
API_TOKEN=please-change-this-long-random-token
# Allow only your GitHub Pages origin, e.g. https://<user>.github.io or https://<user>.github.io/<repo>
CORS_ORIGIN=*

# Minecraft container
MC_CONTAINER_NAME=mc-server
MC_IMAGE=itzg/minecraft-server:latest
MC_DATA_DIR=/opt/minecraft/data
SERVER_PORT=25565

# RCON (not exposed publicly; used by control-api inside the compose network)
ENABLE_RCON=true
RCON_PASSWORD=changeme
RCON_PORT=25575

# Minecraft server settings
EULA=TRUE
MEMORY=2G
TYPE=PAPER
VERSION=LATEST
OPS=

# Optional: Git synchronization for the server directory (/data)
# Examples:
# GIT_REPO=https://github.com/youruser/your-mc-world.git
# GIT_BRANCH=main
# GIT_SSH_PRIVATE_KEY= # if using SSH URLs; mount via compose secret ideally (omitted for brevity)
GIT_REPO=
GIT_BRANCH=main
GIT_AUTO_PUSH=true
GIT_PUSH_INTERVAL_SECONDS=300
GIT_IGNORE_SERVER_PROPERTIES=true
