:15277 {
  encode zstd gzip

  # Self-signed TLS on this port; install the CA on clients to avoid warnings
  tls internal

  # Serve the static web UI from ./web mounted at /srv/www
  root * /srv/www
  file_server

  # Proxy API requests under the same origin
  handle_path /api/* {
    reverse_proxy control-api:8080
  }
}
