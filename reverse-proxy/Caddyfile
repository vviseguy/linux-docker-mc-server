{
  admin off
  auto_https off
  servers {
    protocols h1 h2
  }
}

:8080 {
  encode zstd gzip

  # Serve the static web UI from /srv/www (mounted from ./web)
  root * /srv/www
  file_server

  # Proxy API requests to the FastAPI service under the same origin
  handle_path /api/* {
    reverse_proxy control-api:8080
  }
}
